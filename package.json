{
  "name": "obsidian-rumdl",
  "version": "0.0.12",
  "description": "Markdown linting for Obsidian using rumdl",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "lint": "eslint main.ts --max-warnings 0",
    "lint:staged": "lint-staged",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --max-warnings 0"
    ],
    "*.md": [
      "rumdl fmt"
    ]
  },
  "keywords": [
    "obsidian",
    "markdown",
    "linter",
    "rumdl"
  ],
  "author": "rvben",
  "license": "MIT",
  "devDependencies": {
    "@codemirror/lint": "^6.9.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "builtin-modules": "3.3.0",
    "esbuild": "0.17.3",
    "eslint": "^9.0.0",
    "eslint-plugin-obsidianmd": "^0.1.9",
    "husky": "^9.0.0",
    "lint-staged": "^16.2.7",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "rumdl-wasm": "^0.0.207"
  }
}
